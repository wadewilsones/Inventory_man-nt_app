<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.sun.javafx.webkit.theme.RenderThemeImpl.FormMenuList?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.addingForms.AddPartForm"
          prefHeight="700.0" prefWidth="800.0">
    <stylesheets>
        <String fx:value="style.css" />
    </stylesheets>

    <HBox GridPane.rowIndex="1" spacing="40" styleClass="AddPartFormHeader">
       <Label styleClass="Table_Headers">Add Part</Label>
        <RadioButton>In-House</RadioButton>
        <RadioButton>Outsourced</RadioButton>
    </HBox>

    <FlowPane GridPane.rowIndex="2" styleClass="AddPartForm">
            <HBox styleClass="AddPartFormField">
                <Label>ID</Label>
                <TextField promptText="Auto Gen-Disabled" ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Name</Label>
                <TextField ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Inv</Label>
                <TextField ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Price/Cost</Label>
                <TextField ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Max</Label>
                <TextField></TextField>
                <Label fx:id="fieldMinimum">Min</Label>
                <TextField></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label fx:id="ChangingLabel"></Label>
                <TextField></TextField>
            </HBox>

    </FlowPane>

    <HBox spacing="20" GridPane.rowIndex="3" GridPane.columnIndex="3" GridPane.halignment="RIGHT">
        <Button>Save</Button>
        <Button>Cancel</Button>
    </HBox>
</GridPane>
