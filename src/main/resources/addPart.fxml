<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.sun.javafx.webkit.theme.RenderThemeImpl.FormMenuList?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.addingForms.AddPartFormController"
          prefHeight="700.0" prefWidth="800.0">
    <stylesheets>
        <String fx:value="style.css" />
    </stylesheets>

    <HBox GridPane.rowIndex="1" spacing="40" styleClass="AddPartFormHeader">
       <Text styleClass="Table_Headers" fx:id="HeadingForPart"></Text>
            <RadioButton onMouseClicked="#HandleRadioInHouseButtonChange" text="In-House">
                <toggleGroup>
                    <ToggleGroup fx:id="group"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id= "OutsourcedRBtn" onMouseClicked="#HandleRadioOutButtonChange" text="Outsourced">
                <toggleGroup>
                    <fx:reference source="group"/>
                </toggleGroup>
            </RadioButton>

    </HBox>

    <FlowPane GridPane.rowIndex="2" styleClass="AddPartForm">
            <HBox styleClass="AddPartFormField">
                <Label>ID</Label>
                <TextField promptText="Auto Gen-Disabled" ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Name</Label>
                <TextField ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Inv</Label>
                <TextField ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Price/Cost</Label>
                <TextField ></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Label>Max</Label>
                <TextField></TextField>
                <Label fx:id="fieldMinimum">Min</Label>
                <TextField></TextField>
            </HBox>
            <HBox styleClass="AddPartFormField">
                <Text fx:id = "LabelData"></Text>
                <TextField></TextField>
            </HBox>

    </FlowPane>

    <HBox spacing="20" GridPane.rowIndex="3" GridPane.columnIndex="3" GridPane.halignment="RIGHT">
        <Button>Save</Button>
        <Button>Cancel</Button>
    </HBox>
</GridPane>
